@model LandOfForums.Models.Reply.PostReplyModel

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading">
            @Model.PostTitle
            <span id="headingBtn"><a asp-controller="Post" asp-action="Index" asp-route-id="@Model.PostId" class="btn btn-back">Back to Post</a></span>
        </div>
        <div class="sectionDescription">
            @Model.PostContent
        </div>
    </div>
    <div class="row">
        <div class="createPostSection">
            <form asp-action="AddReply" method="post" id="addPostForm">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ReplyContent">Reply Content</label>
                    <textarea asp-for="ReplyContent" rows="20" class="form-control" placeholder="Write your reply here."></textarea>
                    <span asp-validation-for="ReplyContent" class="text-danger"></span>
                </div>
                <div class="authorBlock">
                    You're submitting this Reply as <span class="authorBlockName">@Model.AuthorName</span>
                </div>
                <button type="submit" id="registerBtn" class="btn btn-submitPost">Submit Reply</button>
                <input asp-for="AuthorId" type="hidden" />
                <input asp-for="PostId" type="hidden" />
                <input asp-for="ForumName" type="hidden" />
                <input asp-for="ForumId" type="hidden" />
            </form>
        </div>
    </div>
</div>
